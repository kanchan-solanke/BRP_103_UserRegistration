<script>
const reg = /^[a-zA-Z0-9.+_-]+[@][a-zA-Z0-9]+[.]co(m|.in)$/

let str ="kanchan.solanke@gmail.com"

let result = reg.exec(str)
    console.log(result)

if(reg.test(str))
{
     console.log("Matches the expression: "+str)
}
else
{
    console.log("Please enter a valid email: "+str)
}
