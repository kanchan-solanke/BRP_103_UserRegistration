<script>
const reg = /^[A-Z]{3}[a-z]{4,}$/

let str ="KANchan"

let result = reg.exec(str)
    console.log(result)

if(reg.test(str))
{
     console.log("Matches the expression: "+str)
}
else
{
    console.log("First three letter must be capital: "+str)
}
</script>
