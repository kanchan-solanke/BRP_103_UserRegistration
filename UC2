<script>
const reg = /^[A-Z]{1}[a-z]{3,}$/

let str ="Solanke"

let result = reg.exec(str)
    console.log(result)

if(reg.test(str))
{
     console.log("Matches the expression: "+str)
}
else
{
    console.log("First letter must be capital: "+str)
}
